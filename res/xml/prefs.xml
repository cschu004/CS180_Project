<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 <PreferenceCategory
   android:summary="Public information"
   android:title="Public Information" >
  <EditTextPreference
     android:key="nickname"
     android:summary="Please enter your nickname"
     android:title="Nickname" />
    <ListPreference
     android:entries="@array/genderOptions"
     android:entryValues="@array/genderValues"
     android:key="listpref"
     android:summary="Gender"
     android:title="Gender" />
   <EditTextPreference
     android:key="aboutme"
     android:summary="Bio"
     android:title="About Me" />
 </PreferenceCategory>

 <PreferenceCategory
   android:summary="Private Information"
   android:title="Private Settings" >
  <EditTextPreference
     android:key="email"
     android:summary="Enter your e-mail"
     android:title="E-Mail" />

 </PreferenceCategory>
</PreferenceScreen>