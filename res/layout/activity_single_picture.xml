<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePicture" >

    <TextView
        android:id="@+id/homescreen_list_element_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homescreen_list_element_image"
        android:layout_marginLeft="20dp"
        android:text="Username"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/homescreen_list_element_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homescreen_list_element_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Caption"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginRight="20dp"
        android:onClick="delete"
        android:text="DELETE" />

</RelativeLayout>
