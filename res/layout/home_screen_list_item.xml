<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/homescreen_list_element_user"
	        android:layout_width="170dp"
	        android:layout_height="34dp"
	        android:text="User" />

	    <TextView
	        android:id="@+id/postTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:text="TextView" />
    
    </LinearLayout>

    <ImageView
        android:id="@+id/homescreen_list_element_image"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:src="@drawable/loader" />

    <LinearLayout
        android:id="@+id/homescreen_comment_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/homescreen_list_element_editComment"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/homescreen_post_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/homescreen_list_element_comments"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="Comments" />

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/homescreen_list_element_button_like"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textSize="14sp" />

        <Button
            android:id="@+id/homescreen_list_element_button_comment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>